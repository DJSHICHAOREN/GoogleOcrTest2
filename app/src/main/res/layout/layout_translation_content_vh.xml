<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.example.djshichaoren.googleocrtest2.ui.element.OutlineTextView
        android:id="@+id/otv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:outlineColor="@color/black"
        android:textSize="18dp"
        app:outlineWidth="1dp"
        tools:text="word"/>

    <com.example.djshichaoren.googleocrtest2.ui.element.OutlineTextView
        android:id="@+id/otv_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:outlineColor="@color/black"
        app:outlineWidth="1dp"
        android:text=":"/>

    <com.example.djshichaoren.googleocrtest2.ui.element.OutlineTextView
        android:id="@+id/otv_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        tools:textColor="@color/black"
        app:outlineColor="@color/black"
        android:textSize="18dp"
        app:outlineWidth="1dp"
        tools:text="translation"/>

</LinearLayout>