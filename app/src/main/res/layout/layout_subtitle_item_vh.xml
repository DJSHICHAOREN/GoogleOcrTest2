<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_whole"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        tools:text="1"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        tools:text="00:01:18,180"/>

    <TextView
        android:id="@+id/tv_chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="20dp"
        android:visibility="visible"
        android:alpha="0"
        tools:text="hello"/>

<!--    <TextView-->
<!--        android:id="@+id/tv_english"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="3dp"-->
<!--        android:textSize="23dp"-->
<!--        tools:text="hello"/>-->

    <LinearLayout
        android:id="@+id/ll_word_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <com.example.djshichaoren.googleocrtest2.ui.view.TranslationResultView
        android:id="@+id/translation_result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>